{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "server",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": [
    "server/**/*",
    "server/**/*.json"
  ],
  "exclude" : [
    "server/**/*.spec.ts"
  ]
}